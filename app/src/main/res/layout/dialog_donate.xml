<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:padding="10dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="1dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/dialogdonateTextView1"
			android:text="长按二维码可保存至本地"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/donate_alipay"
			android:id="@+id/dialogdonateImageAlipay"
			android:adjustViewBounds="true"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/dialogdonateTextView1"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/donate_wechat"
			android:id="@+id/dialogdonateImageWeChat"
			android:layout_below="@id/dialogdonateImageAlipay"
			android:adjustViewBounds="true"
			android:layout_centerHorizontal="true"/>

	</RelativeLayout>

</ScrollView>

